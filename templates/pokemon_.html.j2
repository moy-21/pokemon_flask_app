{% extends 'base.html.j2' %}
{% block title %}
Pokemon Search
{% endblock %}

{% block content %}

<h1>Pokemon Search</h1>
<form action="/pokemon_" method="POST">
  <div class="mb-3">
    <label for="Pokemon" class="form-label">Pokemon</label>
    <input type="text" name="pokemon" class="form-control" id="pokemon">
  </div>
  <div style="color:red"><small>{{error}}</small></div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>

{%if pokemon_dic %}
  <table class="table table-striped table-hover table-dark">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Base XP</th>
        <th scope="col">Defense</th>
        <th scope="col">Attack</th>
        <th scope="col">Sprite</th>
        <th scope="col">HP</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <th scope="row">{{pokemon_dic['name']}}</th>
        <td>{{pokemon_dic.base_}}</td>
        <td>{{pokemon_dic.defense}}</td>
        <td>{{pokemon_dic.attack}}</td>
        <td>{{pokemon_dic.sprite}}</td>
        <td>{{pokemon_dic.hp}}</td>
      </tr>
    </tbody>
    
  </table>
{%endif%}


{% endblock %}