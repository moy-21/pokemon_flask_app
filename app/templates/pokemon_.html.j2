{% extends 'base.html.j2' %}
{% block title %}
Pokemon Search
{% endblock %}

{% block content %}

<h1>Pokemon Search</h1>
<form action='/pokemon_' method="POST">
  {{form.hidden_tag()}}
  <div>
  {{form.pokemon.label(class="form-label")}}
  {{form.pokemon(class="form-control")}}
  {% if error %}
    <small style="color:red;">{{error}}</small>
  {% endif %}
  </div>
  <br>
  <div>
  {{form.submit(class="btn btn-primary form-control")}}
  </div>

{%if pokemon_dic %}
<table class="table table-striped table-hover table-dark">
    <thead>
    <tr>
        <th scope="col">Name</th>
        <th scope="col">Base XP</th>
        <th scope="col">Defense</th>
        <th scope="col">Attack</th>
        <th scope="col">Sprite</th>
        <th scope="col">HP</th>
    </tr>
    </thead>
    <tbody>
    <tr>
        <th scope="row">{{pokemon_dic['name']}}</th>
        <td>{{pokemon_dic.base_}}</td>
        <td>{{pokemon_dic.defense}}</td>
        <td>{{pokemon_dic.attack}}</td>
        <td>{{pokemon_dic.sprite}}</td>
        <td>{{pokemon_dic.hp}}</td>
    </tr>
    </tbody>
        
</table>
{%endif%}


{% endblock %}