{% extends 'base.html.j2' %}

{%block css%}
 <link rel="stylesheet" href="{{url_for('static',filename='css/pokemon_.css')}}">
{%endblock %}

{% block title %}
Pokemon Search
{% endblock %}

{% block content %}

<h1>Pokemon Search</h1>
<form action='/pokemon_' method="POST">
  {{form.hidden_tag()}}
  <div>
  {{form.pokemon.label(class="form-label")}}
  {{form.pokemon(class="form-control")}}
  {% if error %}
    <small style="color:red;">{{error}}</small>
  {% endif %}
  </div>
  <br>
  <div>
  {{form.submit(class="btn btn-danger form-control btn-outline-light")}}
  </div>

{%if pokemon_dic %}
<br>
<div class = "d-flex">
<img src = "{{pokemon_dic.sprite}}" style= "height:260px" class= "float-start">
<table class="table table-striped table-hover table-dark">
    <thead>
    <tr>
        <th scope="col">Name</th>
        <th scope="col">Base XP</th>
        <th scope="col">Defense</th>
        <th scope="col">Attack</th>
        <th scope="col">HP</th>
    </tr>
    </thead>
    <tbody>
    <tr>
        <th scope="row">{{pokemon_dic['name'].title()}}</th>
        <td>{{pokemon_dic.base_}}</td>
        <td>{{pokemon_dic.defense}}</td>
        <td>{{pokemon_dic.attack}}</td>
        <td>{{pokemon_dic.hp}}</td>
    </tr>
    </tbody>
        
</table>
</div>
{%endif%}


{% endblock %}